@page "/"
@inject HttpClient httpClient

<h1>List of Authors</h1>
<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date of birth</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in @authors)
        {
            <tr>
                <td>@author.FirstName</td>
                <td>@author.LastName</td>
                <td>@author.DateOfBirth</td>
            </tr>
        }
    </tbody>
</table>
