@namespace LibraryApp.Web.Components.Design
@using LibraryApp.Web.Components.Design
@using LibraryApp.Web.Design

@{
    var baseClasses = "inline-flex items-center justify-center font-medium transition-smooth rounded-lg " +
                      "focus:outline-none focus:ring-2 focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed " +
                      "whitespace-nowrap gap-2";

    var sizeClasses = Size switch
    {
        ButtonSize.Small => "px-3 py-1.5 text-sm",
        ButtonSize.Large => "px-6 py-3 text-lg",
        _ => "px-4 py-2 text-base" // Medium (default)
    };

    var variantClasses = Variant switch
    {
        ButtonVariant.Secondary => "bg-secondary-500 text-white hover:bg-secondary-600 focus:ring-secondary-500",
        ButtonVariant.Accent => "bg-accent-500 text-white hover:bg-accent-600 focus:ring-accent-500",
        ButtonVariant.Outline => "border-2 border-primary-500 text-primary-600 hover:bg-primary-50 focus:ring-primary-500",
        ButtonVariant.Ghost => "text-primary-600 hover:bg-primary-50 focus:ring-primary-500",
        ButtonVariant.Danger => "bg-red-500 text-white hover:bg-red-600 focus:ring-red-500",
        _ => "bg-primary-500 text-white hover:bg-primary-600 focus:ring-primary-500" // Primary (default)
    };

    var fullWidthClass = FullWidth ? "w-full" : "";
    var classes = $"{baseClasses} {sizeClasses} {variantClasses} {fullWidthClass} {Class}";
}

<button class="@classes" 
        type="@Type" 
        disabled="@Disabled"
        @onclick="HandleClick">
    @if (IconStart != null)
    {
        <span>@IconStart</span>
    }
    @ChildContent
    @if (IconEnd != null)
    {
        <span>@IconEnd</span>
    }
</button>
