@inherits LayoutComponentBase

<!-- Main Layout com Tailwind CSS -->
<div class="flex h-screen bg-neutral-50">
    <!-- Sidebar/Drawer -->
    <aside class="w-64 bg-neutral-900 text-white overflow-y-auto transition-transform duration-300 @(_drawerOpen ? "block" : "hidden md:block")">
        <!-- Header -->
        <div class="p-6 border-b border-neutral-800">
            <div class="flex items-center gap-3">
                <img src="images/owl.svg" alt="LibraryApp" class="w-10 h-10">
                <span class="text-xl font-bold">LibraryApp</span>
            </div>
        </div>
        <!-- Menu -->
        <nav class="p-4">
            <NavMenu></NavMenu>
        </nav>
    </aside>

    <!-- Main Content -->
    <div class="flex-1 flex flex-col overflow-hidden">
        <!-- Header/TopBar -->
        <header class="bg-white border-b border-neutral-200 px-6 py-4 flex items-center justify-between">
            <button @onclick="DrawerToggle" class="md:hidden p-2 rounded-lg hover:bg-neutral-100">
                <span>☰</span>
            </button>
            <h1 class="text-2xl font-bold text-primary-900">Library App</h1>
            <div class="w-10"></div>
        </header>

        <!-- Content -->
        <main class="flex-1 overflow-y-auto p-6">
            <div class="max-w-7xl mx-auto">
                @Body
            </div>
        </main>
    </div>
</div>