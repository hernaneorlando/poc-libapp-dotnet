@page "/"
@layout PublicLayout
@using LibraryApp.Web.Components
@using LibraryApp.Web.Design

<div class="flex flex-col gap-12">
    <!-- Hero Section - Centered -->
    <div class="flex items-center justify-center px-4 py-12 md:py-24">
        <section class="text-center w-full max-w-2xl">
            <h2 class="text-4xl md:text-5xl font-bold text-neutral-900 mb-6">
                Just Keep Reading
            </h2>
            
            <!-- Search Bar -->
            <div class="relative">
                <Input 
                    @bind-Value="SearchQuery"
                    Placeholder="Search by title or author..."
                    @onkeyup="@(e => HandleSearch(e))" />
                <button 
                    @onclick="DoSearch"
                    class="absolute right-2 top-1/2 -translate-y-1/2 bg-primary-600 text-white rounded-lg p-2.5 hover:bg-primary-700 transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                </button>
            </div>
        </section>
    </div>

    <!-- Latest Books Section - Bottom -->
    @if (!IsSearching && !HasSearched)
    {
        <section class="mb-12 px-4">
            @if (LatestBooks == null)
            {
                <div class="flex justify-center items-center h-64">
                    <div class="animate-spin">
                        <div class="w-12 h-12 border-4 border-primary-200 border-t-primary-600 rounded-full"></div>
                    </div>
                </div>
            }
            else if (LatestBooks.Count > 0)
            {
                <!-- Desktop Grid (5 columns) -->
                <div class="hidden lg:grid grid-cols-5 gap-6">
                    @foreach (var book in LatestBooks)
                    {
                        <BookCard 
                            Id="@book.Id"
                            Title="@book.Title"
                            Author="@book.Author"
                            Category="@book.Category"
                            Rating="@book.Rating"
                            DateAdded="@book.DateAdded"
                            OnViewDetails="@(() => HandleViewBook(book))" />
                    }
                </div>

                <!-- Tablet Grid (3 columns) -->
                <div class="hidden md:grid lg:hidden grid-cols-3 gap-6">
                    @foreach (var book in LatestBooks)
                    {
                        <BookCard 
                            Id="@book.Id"
                            Title="@book.Title"
                            Author="@book.Author"
                            Category="@book.Category"
                            Rating="@book.Rating"
                            DateAdded="@book.DateAdded"
                            OnViewDetails="@(() => HandleViewBook(book))" />
                    }
                </div>

                <!-- Mobile Horizontal Scroll -->
                <div class="md:hidden flex gap-4 overflow-x-auto pb-4 snap-x snap-mandatory">
                    @foreach (var book in LatestBooks)
                    {
                        <div class="flex-shrink-0 w-64 snap-start">
                            <BookCard 
                                Id="@book.Id"
                                Title="@book.Title"
                                Author="@book.Author"
                                Category="@book.Category"
                                Rating="@book.Rating"
                                DateAdded="@book.DateAdded"
                                OnViewDetails="@(() => HandleViewBook(book))" />
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-12">
                    <p class="text-neutral-600">No books available</p>
                </div>
            }
        </section>
    }

    <!-- Search Results Section -->
    @if (HasSearched)
    {
        <section class="mb-12 px-4">
            <div class="flex items-center justify-between mb-6">
                <h3 class="text-2xl font-bold text-neutral-900">
                    Search Results
                </h3>
                <button 
                    @onclick="ClearSearch"
                    class="text-primary-600 hover:text-primary-700 font-medium text-sm">
                    Clear Search
                </button>
            </div>

            @if (SearchResults == null)
            {
                <div class="flex justify-center items-center h-64">
                    <div class="animate-spin">
                        <div class="w-12 h-12 border-4 border-primary-200 border-t-primary-600 rounded-full"></div>
                    </div>
                </div>
            }
            else if (SearchResults.Count > 0)
            {
                <div class="hidden lg:grid grid-cols-5 gap-6">
                    @foreach (var book in SearchResults)
                    {
                        <BookCard 
                            Id="@book.Id"
                            Title="@book.Title"
                            Author="@book.Author"
                            Category="@book.Category"
                            Rating="@book.Rating"
                            DateAdded="@book.DateAdded"
                            OnViewDetails="@(() => HandleViewBook(book))" />
                    }
                </div>

                <div class="hidden md:grid lg:hidden grid-cols-3 gap-6">
                    @foreach (var book in SearchResults)
                    {
                        <BookCard 
                            Id="@book.Id"
                            Title="@book.Title"
                            Author="@book.Author"
                            Category="@book.Category"
                            Rating="@book.Rating"
                            DateAdded="@book.DateAdded"
                            OnViewDetails="@(() => HandleViewBook(book))" />
                    }
                </div>

                <div class="md:hidden flex gap-4 overflow-x-auto pb-4 snap-x snap-mandatory">
                    @foreach (var book in SearchResults)
                    {
                        <div class="flex-shrink-0 w-64 snap-start">
                            <BookCard 
                                Id="@book.Id"
                                Title="@book.Title"
                                Author="@book.Author"
                                Category="@book.Category"
                                Rating="@book.Rating"
                                DateAdded="@book.DateAdded"
                                OnViewDetails="@(() => HandleViewBook(book))" />
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-12">
                    <svg class="w-16 h-16 text-neutral-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C6.5 6.253 2 10.998 2 17s4.5 10.747 10 10.747c5.5 0 10-4.998 10-10.747 0-6.002-4.5-10.747-10-10.747z"></path>
                    </svg>
                    <p class="text-neutral-600 text-lg">No books found for "@SearchQuery"</p>
                </div>
            }
        </section>
    }
</div>
