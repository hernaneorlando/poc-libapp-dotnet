@page "/"
@inject HttpClient httpClient

<h1>List of Authors</h1>
<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date of birth</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in @authors)
        {
            <tr>
                <td>@author.FirstName</td>
                <td>@author.LastName</td>
                <td>@author.DateOfBirth</td>
            </tr>
        }
    </tbody>
</table>

<h1>List of Users</h1>
<table>
    <thead>
        <tr>
            <th>Alias</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Role</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in @users) 
        { 
            <tr>
                <td>@user.Alias</td>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user?.Role?.Name</td>
            </tr>
        }
    </tbody>
</table>